main:			mov		#h83,inte		; ativa interrupcoes

bool_check_tec:		or		#h80,inte		; ativa interrupcoes
			and		#h7f,inte		; desativa interrupcoes
			
			cmp		#hffff,tecla_bool	; check se tem tecla pendente
