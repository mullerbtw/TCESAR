			cmp		#'1',tecla		; checa se tecla == 1
			bne		check_tec_dois		; senao, vai para proxima tecla
			jmp		adj_bools_um		
check_tec_dois:		cmp		#'2',tecla		; checa se tecla == 2
			bne		check_tec_tres		; senao, vai para proxima tecla
			jmp		adj_bools_dois
check_tec_tres:		cmp		#'3',tecla		; checa se tecla == 3
			bne		stop_check_tec		; encerra se tecla diferente
			jmp		adj_bools_tres

stop_check_tec:		clr		tecla_bool		; limpa bool de tecla pendente (ja foi usado)
			jmp		check_c_bools		; vai para check de bools dos counters

adj_bools_um:		cmp		wait_um,#hffff		; se modo wait ligado
			beq		actv_show_um		; liga modo show
			cmp		show_um,#hffff		; se modo show ligado
			beq		actv_frzn_um		; liga modo frozen
			jmp		actv_wait_um		; senao, liga modo wait

actv_show_um:		not		wait_um			; desliga modo wait
			not		show_um			; liga modo show
			jmp		stop_check_tec		; termina

actv_frzn_um:		not		show_um			; desliga modo show
			not		frozen_um		; liga modo frozen
			mov		#0,segundos_um		; zera segundos
			mov		#0,decimos_um		; zera decimos
			cmp		#10,laps_um		; checa se laps >= 10
			beq		zerar_laps_um		; se sim, zera laps
			jmp		stop_check_tec		; senao, termina

zerar_laps_um:		mov		#1,laps_um		; move 1 para laps
			jmp		stop_check_tec		; termina

actv_wait_um:		not		frozen_um		; desliga frozen
			not		wait_um			; liga wait
			clr		laps_um			; zera laps
			clr		decimos_um		; zera decimos
			clr		segundos_um		; zera segundos
			mov		#50,frozen_c_um		; reseta counter de 5s
			jmp		stop_check_tec		; termina

adj_bools_dois:		cmp		wait_dois,#hffff
			beq		actv_show_dois
			cmp		show_dois,#hffff
			beq		actv_frzn_dois
			jmp		actv_wait_dois

actv_show_dois:		not		wait_dois		
			not		show_dois
			jmp		stop_check_tec

actv_frzn_dois:		not		show_dois
			not		frozen_dois
			mov		#0,segundos_dois
			mov		#0,decimos_dois
			cmp		#10,laps_dois
			beq		zerar_laps_dois
			jmp		stop_check_tec

zerar_laps_dois:	mov		#1,laps_dois
			jmp		stop_check_tec

actv_wait_dois:		not		frozen_dois
			not		wait_dois
			clr		laps_dois
			clr		decimos_dois
			clr		segundos_dois
			mov		#50,frozen_c_dois
			jmp		stop_check_tec

adj_bools_tres:		cmp		wait_tres,#hffff	; arruma bools do crono 3
			beq		actv_show_tres
			cmp		show_tres,#hffff
			beq		actv_frzn_tres
			jmp		actv_wait_tres

actv_show_tres:		not		wait_tres		
			not		show_tres
